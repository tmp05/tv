<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.ks.tv"
    android:installLocation="internalOnly">

    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.QUICKBOOT_POWERON" />

    <application
        android:name="org.videolan1.vlc.VLCApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="KSTV"
        android:logo="@drawable/logo_bar"
        android:theme="@style/Theme.MyTheme">
        <activity
            android:name=".MainAuthActivity"
            android:exported="true"
            android:theme="@style/Theme.MyTheme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.LAUNCH" />
                <category android:name="android.intent.category.HOME"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.HOME"/>
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GuestAuthActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/Theme.MyTheme.NoTitleBar" />
        <activity
            android:name=".PrMainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="" />
        <activity
            android:name=".SocialAuthActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/Theme.MyTheme.NoTitleBar" />
        <activity
            android:name=".OldPreferenceActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="" />
        <activity
            android:name=".BillingActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Оплата">
            <intent-filter>
                <action android:name="ru.krasview.tv.ACTION_BILLING" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".player.VideoActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.MyTheme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="ru.krasview.tv.PLAY_VIDEO_LIST" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label=""
            android:theme="@style/Theme.AppCompat">
            <intent-filter>
                <action android:name="krasview.intent.action.LAUNCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="ru.krasview.tv.ACTION_MAIN_ACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.LAUNCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <service android:name="org.videolan1.vlc.AudioService" />

        <receiver android:name="org.videolan1.vlc.PhoneStateReceiver">
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>
        <receiver android:name="org.videolan1.vlc.RemoteControlClientReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>
        <receiver android:name=".BootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <action android:name="com.htc.intent.action.QUICKBOOT_POWERON" />
            </intent-filter>
        </receiver>
    </application>

</manifest>